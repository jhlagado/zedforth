; c@ ( a -- n )
MCODE 'c@',IMMED+2,cAt
POP IX
_cAt
JP (IX)

; c! ( n a -- )
MCODE 'c!',2,cBang
POP IX
_cBang
JP (IX)

; @ ( a -- n )
MCODE "@",2,at
POP IX
_at
JP (IX)

; ! ( n a -- )
MCODE "!",1,bang
POP IX
_bang
JP (IX)

; @ ( a -- n )
MCODE "2@",2,twoAt
POP IX
_twoAt
JP (IX)

; ! ( n a -- )
MCODE "2!",2,twoBang
POP IX
_twoBang
JP (IX)

; ! ( n a -- )
MCODE "+!",2,plusBang
POP IX
_plusBang
JP (IX)

; , ( w -- )
; Compile an integer into the code dictionary.
MCODE ",",1,COMMA
    ENTER
    _fetch var_here                             ; w here
    _dup                                        ; w here here
    call tor                                    ; w here        R: here
    _bang                                  
    call rfrom                                  ; here                                  
    _cellPlus                                   ; here+2
    _store var_here                             ; here+2 &here
    EXIT                                                     

MCODE "c,",1,CCOMMA
    ENTER
    _fetch var_here                             ; w here
    _dup                                 
    call tor                                    ; w here r: here
    _bang                                  
    call rfrom                                  ; here                                  
    _onePlus                                    ; here+1
    _cstore var_here                            ; here+1 &here
    EXIT                                                     

; call,       ( adr -- )
; Assemble a call instruction to adr
MCODE 'call,',5,CALLC
    ENTER
    _push CALL_OPCODE
    call ccomma
    call comma
    EXIT                                                     

; ALLOT       ( n -- )
; Allocate n bytes to the code dictionary.
MCODE "allot",5,allot               
    ENTER
    _fetch var_here 
    call plusBang                               ; adds n to here
    EXIT                                                     
